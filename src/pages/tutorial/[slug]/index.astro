---
import { type CollectionEntry, getCollection } from "astro:content";
import Tutorial from "@layouts/Tutorial.astro";
import TutorialDetails from "@layouts/TutorialDetails.astro";
import getSortedTutorial from "@utils/getSortedTutorial";
import getPageNumbers from "@utils/getPageNumbers";
import getPagination from "@utils/getPagination";

export interface Props {
  post: CollectionEntry<"tutorial">;
}

export async function getStaticPaths() {
  const posts = await getCollection("tutorial", ({ data }) => !data.draft);

  const postResult = posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));

  const pagePaths = getPageNumbers(posts.length).map(pageNum => ({
    params: { slug: String(pageNum) },
  }));

  return [...postResult, ...pagePaths];
}

const { slug } = Astro.params;
const { post } = Astro.props;

const posts = await getCollection("tutorial");

const sortedPosts = getSortedTutorial(posts);

const pagination = getPagination({
  posts: sortedPosts,
  page: slug,
});
---

{post ? <TutorialDetails post={post} /> : <Tutorial {...pagination} />}
